# ============================================
# CHRESO UNIVERSITY - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in the values.
# NEVER commit .env.local to version control!
# ============================================

# ============================================
# SUPABASE CONFIGURATION (Required)
# ============================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# FEATURE FLAGS (All disabled by default)
# ============================================
# Enable magic link (OTP) authentication
# REQUIRES: Supabase SMTP configured and working
VITE_ENABLE_MAGIC_LINK_AUTH=false

# Enable role-based access control v2
VITE_ENABLE_ROLE_BASED_ACCESS_V2=false

# Enable SUDO admin functionality
VITE_ENABLE_SUDO_ADMIN=false

# Enable staff email domain enforcement (magic-link only)
VITE_ENABLE_STAFF_DOMAIN_ENFORCEMENT=false

# ============================================
# SUDO ADMIN CONFIGURATION
# Only required when VITE_ENABLE_SUDO_ADMIN=true
# ============================================
# SUDO admin email address
VITE_SUDO_ADMIN_EMAIL=

# SUDO admin password hash (for verification)
# Generate with:
# node -e "console.log(require('crypto').createHash('sha256').update('your-password').digest('hex'))"
VITE_SUDO_ADMIN_PASSWORD_HASH=

# ============================================
# STAFF DOMAIN ENFORCEMENT
# Only required when VITE_ENABLE_STAFF_DOMAIN_ENFORCEMENT=true
# ============================================
# Staff email domain (without the @ symbol)
# Example: chresouniversity.edu.zm
VITE_STAFF_EMAIL_DOMAIN=

# ============================================
# MAGIC LINK CONFIGURATION
# Only required when VITE_ENABLE_MAGIC_LINK_AUTH=true
# ============================================
# Redirect URL after magic link verification
# Defaults to current app origin if not set
# Example: https://your-app.com
VITE_MAGIC_LINK_REDIRECT_URL=
